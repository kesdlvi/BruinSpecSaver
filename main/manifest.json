{
    "manifest_version": 3,
    "name": "BruinSpecSaver",
    "description": "Fixing your CS spec vision",
    "version": "1.0",
    "action": {
      "default_popup": "index.html"
    },
    "background": {
      "service-workers": "background.js"
    },
    "content_scripts": [
        {
            "matches":["<all_urls>"],
            "js": ["app.js"]
        }
    ],
    "permissions":[ "tabs"],
    "commands": {
      "_execute_action": {
          "suggested_key": {
            "default": "Ctrl+U",
            "mac": "Command+U"
          }
        }
    }
  }
  